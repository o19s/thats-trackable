<% if notice %>
<div class="alert alert-info"><%= notice %></div>
<% end %>

<div class="row">
     <div class="col-sm-5 bootcards-list">

       <div class="panel panel-default">
         <div class="panel-body">
 						<div class="search-form">
 							<div class="row">
 							    <div class="col-xs-9">
                    <!--
 							      <div class="form-group">
 								      <input type="text" class="form-control" placeholder="Search Runners...">
 								      <i class="fa fa-search"></i>
 							      </div>
                    -->
 							    </div>
 							    <div class="col-xs-3">

                  <a class="btn btn-primary btn-block" href="<%= new_runner_run_path(current_runner) %>">
                    <i class="fa fa-plus"></i><span>Add</span>
                  </a>
 							    </div>
 							</div>
 					 </div>
 				 </div>

         <div class="list-group">
           <% @runs.each do |run| %>
           <a class="list-group-item <%= 'active' if run == @run %>" href="<%= runner_run_path(run.runner, run) %>">
             <h4 class="list-group-item-heading"><%=run.date%></h4>
             <p class="list-group-item-text">Mileage: <%=run.mileage %></p>
           </a>
           <% end %>
         </div>
       </div>

     </div>
     <div class="col-sm-7 bootcards-cards">

       <% if @run %>
       <div class="panel panel-default">

         <div class="panel-heading clearfix">
           <h3 class="panel-title pull-left"><%= @run.date %></h3>
             <% if @runner.name == current_runner.name %>
             <a class="btn btn-primary pull-right" href="<%= edit_runner_run_path(@runner, @run) %>">
               <i class="fa fa-pencil"></i>Edit
            </a>
            <% end %>
           </div>
           <div class="list-group">
             <div class="list-group-item">
               <p class="list-group-item-text">Mileage</p>
               <h4 class="list-group-item-heading"><%= @run.mileage %></h4>
             </div>
             <div class="list-group-item">
               <p class="list-group-item-text">Pace</p>
               <h4 class="list-group-item-heading"><%= @run.pace %></h4>
             </div>
             <div class="list-group-item">
               <p class="list-group-item-text">Duration</p>
               <h4 class="list-group-item-heading"><%= @run.duration %></h4>
             </div>
             <div class="list-group-item">
               <h4 class="list-group-item-heading">Notes</h4>
               <p class="list-group-item-text"><%= @run.progress %></p>
             </div>
           </div>

         <div class="panel-footer">
           <small><i>Repeating is harder than anything else.</i> - Usain Bolt</small>
         </div>
         <% end %>
       </div>

     </div>
   </div>

</div>
