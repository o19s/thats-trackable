<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= image_tag "#{@runner.facebook_user.avatar_url}?width=200&height=200", class: 'avatar', alt: @runner.name unless @runner.facebook_user.nil?%>

    <p>
    <strong>Name:</strong>
    <%= @runner.name %>
    </p>

    <p>
    <strong>Group:</strong>
    <%= @runner.group.nil? ? 'n/a' : @runner.group.name %>
    </p>

    <p>
    <strong>Email:</strong>
    <%= @runner.email %>
    </p>

    <p>
    <strong>Role:</strong>
    <%= @runner.role %>
    </p>

    <p>
    <strong>Active in Program:</strong>
    <%= @runner.active %>
    </p>

  <%= link_to 'Edit', edit_runner_path(@runner), class: "btn btn-success" %> |
  <%= link_to 'Back', runners_path, class: "btn btn-info" %>
  </div>
</div>
