<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Change <%= @runner.name %>'s Password</h1>
    <br>
    <%= form_for current_runner do |f| %>
        <%= f.label "New Password:" %>
        <%= f.password_field :password %><br><br>
        <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>