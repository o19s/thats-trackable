<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-12">
      <h1>Planned runs for group <i><%= @group.name %></i></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-3 col-xs-3">
      <strong>DATE</strong>
    </div>
    <div class="col-md-4 col-sm-3 col-xs-3">
      <strong>Training Plan</strong>
    </div>
    <div class="col-md-4 col-sm-3 col-xs-3">
      <strong>Buttons</strong>
    </div>
  </div>
  <!-- Grid layout for Planned_runs -->

  <% @planned_runs.each.with_index do |planned_run, index| %>
      <% if index % 2 == 0 %>
        <div class="row" style="background-color: #FBFB7A">
      <% else %>
          <div class="row" style="background-color: lightblue">
      <% end %>
        <div class="col-md-4 col-sm-3 hidden-xs index_rows">
          <%= planned_run.date %>
        </div>
        <div class="hidden-lg hidden-md hidden-sm col-xs-3 index_rows">
          <%= Date.strptime(planned_run.date.to_s, "%Y-%m-%d").strftime("%m-%d") %>
        </div>
        <div class="col-md-4 col-sm-3 col-xs-3 index_rows">
          <%= planned_run.training_plan %>
        </div>
        <div class="col-md-4 hidden-sm hidden-xs index_rows">
          <%= link_to 'Show', group_planned_run_path(@group, planned_run), class: "btn btn-success"%>
          <%= link_to 'Edit', edit_group_planned_run_path(@group, planned_run), class: "btn btn-primary" %>
          <%= link_to 'Delete', group_planned_run_path(@group, planned_run), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-danger"%>
        </div>
        <div class="hidden-lg hidden-md col-sm-3 col-xs-3 index_rows">
          <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal<%= index %>">Options</button>
          <!-- Modal -->
          <div id="myModal<%= index %>" class="modal fade" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Options</h4>
                </div>
                <div class="modal-body">
                  <%= link_to 'Show', group_planned_run_path(@group, planned_run), class: "btn btn-success"%>
                  <%= link_to 'Edit', edit_group_planned_run_path(@group, planned_run), class: "btn btn-primary" %>
                  <%= link_to 'Delete', group_planned_run_path(@group, planned_run), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-danger"%>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to 'New Planned Run', new_group_planned_run_path(@group), class: "btn btn-info", style: "margin-top:2em; width:100%" %>
    </div>
  </div>
</div>


