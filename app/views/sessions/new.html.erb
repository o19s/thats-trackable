<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>Log In</h1>
            <%= form_for(:session, url: login_path) do |f| %>
                <%= f.label :email, class: "pull-left" %>
                <%= f.text_field :email, class: 'form-control' %><br>

                <%= f.label :password, class: "pull-left" %>
                <%= f.password_field :password, class: 'form-control' %><br>

                <%= f.submit "Log in", class: "btn btn-primary", style: "width:100%" %>
            <% end %>
            <br>
          <p>New User? <%= link_to "Sign up now!", signup_path, class: "btn btn-success", style: "color:white" %></p>
        </div>
    </div>
</div>

